<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:clipChildren="false">

    <RelativeLayout
        android:id="@+id/dayPickerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:clipChildren="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="12dp"
            android:gravity="center"
            android:id="@+id/currentMonth"/>

        <sun.bob.mcalendarview.views.WeekColumnView
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:layout_below="@+id/currentMonth"
            android:id="@+id/weekColumnView"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"
            android:id="@+id/separator"
            android:layout_below="@+id/weekColumnView"/>

        <sun.bob.mcalendarview.views.ExpCalendarView
            android:id="@+id/dayPicker"
            android:layout_below="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignBottom="@+id/dayPicker"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/expander"
            android:elevation="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-12dp"
            android:src="@drawable/circle_accent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@android:color/transparent"
            android:layout_below="@+id/dayPicker"/>
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>